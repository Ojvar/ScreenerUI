extends ../../layout/app.pug

block title
    | Welcome to TaskTracker

//- block styles


block content
    #app.container.has-text-centered
        .columns.is-vcentered
            .column.is-9
                user-list(ref="userList")
            .column.is-2.is-offset-1
                ul
                    li
                        a.button.is-fullwidth.is-rounded(href="#", @click.prevent="commandClick('new-user')")
                            span.icon.is-small
                                i.material-icons.icon add_circle
                            span New user
                    li
                        a.button.is-fullwidth.is-rounded(href="#", @click.prevent="commandClick('edit-user')")
                            span.icon.is-small
                                i.material-icons.icon check_circle
                            span Edit user
                    li
                        a.button.is-fullwidth.is-rounded(href="#", @click.prevent="commandClick('toggle-user')")
                            span.icon.is-small
                                i.material-icons.icon swap_horizontal_circle
                            span Active/Deactive

block footer
    ul
        li
            a Copyright&copy; Ojvar, 2018-2020

block scripts
    script(defer, src=mix('js/pages/user/index/index.js'))

